def conversion(sec):
    sec = sec % (24 * 3600)
    hour_value = sec // 3600
    minute = sec // 60
    sec %= 60
    print("seconds value in hours:", hours_value)
    print("seconds value in minutes:", minute)
    return "%02d:%02d:%02d" % (hour_value, minute, sec)
    а = 18000
    print("time in preferred_format:-", conversion(a))

